{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}